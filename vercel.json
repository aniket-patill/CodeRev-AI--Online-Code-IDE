{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "buildCommand": "next build",
    "framework": "nextjs",
    "cleanUrls": true,
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store, no-cache, must-revalidate"
                },
                {
                    "key": "Pragma",
                    "value": "no-cache"
                }
            ]
        }
    ],
    "functions": {
        "src/app/api/**/*.js": {
            "maxDuration": 30
        }
    }
}